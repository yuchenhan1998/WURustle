<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="182dp"
            android:layout_height="199dp" app:srcCompat="@mipmap/no_image"
            android:id="@+id/book_cover_" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/book_name"
            android:layout_marginTop="8dp" android:layout_marginStart="4dp"/>
    <TextView
            android:text="@string/book_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/book_name_" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/book_cover_" android:textSize="24sp"
            android:textColor="#007360" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_price_" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/book_name_" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/book_cover_" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/book_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/book_class_" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/book_price_" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/book_cover_" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textColor="#6c7373"/>
    <!--<TextView-->
    <!--android:text="@string/book_available"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/book_until_" android:layout_marginTop="16dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/book_class_"-->
    <!--app:layout_constraintStart_toEndOf="@+id/book_cover_" android:layout_marginStart="32dp"-->
    <!--android:textSize="18sp"/>-->
    <Button
            android:text="Delete"
            android:layout_width="68dp"
            android:layout_height="27dp"
            android:id="@+id/delete" android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/book_class_"
            android:background="@drawable/button"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/book_cover_"/>

</android.support.constraint.ConstraintLayout>