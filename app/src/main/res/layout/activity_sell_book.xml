    <Button
            android:text="@string/book_publish"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/publish" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="112dp" app:layout_constraintTop_toBottomOf="@+id/message"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cancel"/>
